<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        button{
            border: none;
            padding: 3px;
            border-radius: 5px;
            background-color: rgb(0, 85, 255) ;
            color: white;
        }
        button:hover{
            padding: 5px;
            background-color: green;
        
        }
        .box:hover{
            padding: 10px;
            background-color: aqua !important;

        }
        .del:hover{
            background-color: red !important;
        }
    </style>
</head>

<body>
    <h1>Quora</h1>
    <% for(let post of posts){ %>
        <div style="background-color: lightpink; display:  inline-block; width: 300px; margin-left: 10px;text-align: center; flex-wrap: wrap; margin-bottom: 10px; border-radius: 10px; border: none;"  class="box" >
            <h3>@<%= post.username %></h3>
            <h4><%= post.contenet %></h4>
            <a href="http://localhost:8080/posts/<%= post.id %>"><button>Read</button></a><br><br>
            <a href="http://localhost:8080/posts/<%= post.id %>/edit"><button>Edit</button> </a><br><br>
            <form method="post" action="/posts/<%= post.id %>?_method=Delete">
                
                <button style="margin-bottom: 10px; " class="del">Delete</button>
            </form>
            
        </div>
        
        
        
        <%  } %>

        <br><br><br>
        <a href="/posts/new"><button>create</button></a>
</body>
</html>